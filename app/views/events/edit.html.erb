<h1>Events#edit</h1>

<%= form_with model: @event, url: "/events", method: :put do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %> <br><br>
  <% @event.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
  <% end %>

  <%= form.label :date %>
  <%= form.date_field :date %> <br><br>
  <% @event.errors.full_messages_for(:date).each do |message| %>
      <div> <%= message %> <div>
  <% end %>

  <%= form.label :description %>
  <%= form.text_area :description %> <br><br>
  <% @event.errors.full_messages_for(:description).each do |message| %>
    <div> <%= message %> </div>
  <% end %>

  <%= form.submit "Create Event" %>
<% end %>
<%= button_to "Home",home_path, method: :get %>

<div style = "color:red"> <%= flash[:not_created] %> </div>
