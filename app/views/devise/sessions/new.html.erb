
<head>
  <style>
    .gradient-custom {
      /* fallback for old browsers */
      background: #6a11cb;

      /* Chrome 10-25, Safari 5.1-6 */
      background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));

      /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
    #form {
      margin-bottom: -4rem!important;
    }
    #flash {
      color: red;
      background-color: #f8d7da;
      margin: auto;
      text-align: center;
    }
    #alert {
      color: red;
      margin: auto;
      text-align: center;
    }
    #links{
      padding-top: 20px;
    }
  </style>
  <script type="text/javascript">
    function hide_sidebar()
    {
      document.getElementById('myMsg').style.visibility="hidden";
    }
  </script>
</head>
<section class="vh-100 gradient-custom">
<% if notice %>
<div class="alert alert-warning alert-dismissible fade show m-1" role="alert" id="flash">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close" onClick="window.location.reload();">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5", id='form'>

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb4", style="margin-top: 30px;">Please enter your email and password!</p>
              <% if alert %>
              <div class="alert alert-warning alert-dismissible fade show m-1" role="alert">
                <%= alert %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close" onClick="window.location.reload();">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <% end %>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-outline form-white mb-4">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
              </div>

              <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-outline-light btn-lg px-5"  %>
              </div>
              <% end %>
              <div id='links'>
                <%= render "devise/shared/links" %>
              </div>
              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>




















