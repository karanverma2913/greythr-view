<head>
  <style>
    @media (min-width: 1025px) {
      .h-custom {
        height: 115vh !important;
      }
    }

    #employee {
      position: absolute;
      right: 120px;
    }

    #home {
      position: absolute;
      left: 130px;
    }

    .join {
      position: absolute;
      left: 100px;
    }
  </style>
</head>

<section class="h-200 h-custom" style="background-color: #343a40;">
  <div class="container py-5 h-200">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
          class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
          alt="Sample photo">
          <div class="card-body p-4 p-md-5 mb-4">
            <h3 class="mb-4 pb-3 pb-md-1 px-md-2">Sign up</h3>
            <div style = "color:red"> <%= flash[:notice] %> </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "px-md-2") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-outline">
                <%= f.label :name, class: "form-label mt-1" %>
                <%= f.email_field :name, class: "form-control" %>
              </div>

              <div class="form-outline">
                <%= f.label :email, class: "form-label mt-1" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="form-outline">
                <%= f.label :password, class: "form-label mt-1" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="form-outline">
                <%= f.label :password_confirmation, class: "form-label mt-1" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="form-outline">
                <%= f.label :role, class: "form-label mt-1" %>
                <%= f.email_field :role, class: "form-control" %>
              </div>

              <div class="form-outline">
                <%= f.label :salary, class: "form-label mt-1" %>
                <%= f.email_field :salary, class: "form-control" %>
              </div>

              <div class='input-group date mb-4 mt-4' id='picker'>
                <%= f.label :joining_date, class: "form-label mt-1" %>
                <%= f.date_field :joining_date, class: "form-control ml-2" %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-success btn-lg mb-1",id: 'employee' %>
              </div>
            <% end %>
            <%= button_to 'Log-in',"/users/sign_in", class: "btn btn-success btn-lg mb-1", id: 'home' %>
        </div>
        </div>
      </div>
    </div>
  </div>
</section>
