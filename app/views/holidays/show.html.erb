<head>
  <style>
    p {
      color: #fff;
      background-color: #343a40;
      text-align: center;
      padding: 15px;
      margin-bottom: 0px;
      font-size: 150%;
      font-weight: bold;
    }
    .delete {
      position: absolute;
      top: 12px;
      right: 15px;
      background-color: black;
      color: #FFFFFF;
      border: none;
      padding: 8px 12px;
      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
    }
    .home {
      position: absolute;
      top: 12px;
      left: 15px;
      background-color: black;
      color: #FFFFFF;
      border: none;
      padding: 8px 12px;
      border-radius: 4px;
      text-decoration: none;
      cursor: pointer;
    }
    .home:hover, .delete:hover {
      background-color: #27AE60;
      transition-duration: 0.5s;
    }
    #delete {
      position: absolute;
      top: 10px;
      right: 15px;

    }
    #edit {
      position: absolute;
      top: 10px;
      right: 100px;

    }
    #home {
      position: absolute;
      top: 10px;
      left: 15px;
    }
    #home, #delete {
      padding-left: 1rem!important;
      padding-right: 1rem!important;
    }
    div {
      margin-top: 50px;
    }
    span {
      font-weight: bold;
    }
  </style>
</head>
<p>Holiday</p>
<div align="center">
  <span> Name :- </span><%= @holiday.name %> <br>
  <span> Email :- </span><%= @holiday.date %> <br>
</div>
<%= button_to "Edit", edit_holiday_path(@holiday), method: :delete, id: 'edit', class: "btn btn-outline-light btn-lg px-5" %>
<%= button_to "Delete", user_path(@holiday), method: :delete, id: 'delete', class: "btn btn-outline-light btn-lg px-5" %>
<%= button_to "Home",home_path, method: :get, id: 'home', class: "btn btn-outline-light btn-lg px-5" %>


